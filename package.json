{
  "name": "@wingscloud/template-website",
  "version": "0.1.0",
  "description": "【前端模板】门户网站，基于 Nuxt + Varlet UI 开发。拒绝过度封装，减少学习成本，快速落地开发。提供国际化支持、移动端适配、服务端渲染、SEO 优化、3D 交互等。",
  "author": "Kaivan Wong <kaivanwong@outlook.com>",
  "license": "MIT",
  "homepage": "https://github.com/wingscloud/template-website#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wingscloud/template-website.git"
  },
  "bugs": {
    "url": "https://github.com/wingscloud/template-website/issues"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint"
    ],
    "*.vue": [
      "eslint",
      "prettier --write",
      "stylelint --fix"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "scripts": {
    "serve": "npm run serve:dev",
    "serve:dev": "nuxt dev --mode development",
    "serve:stag": "nuxt dev  --mode staging",
    "serve:prod": "nuxt dev  --mode production",
    "build": "npm run build:prod",
    "build:dev": "nuxt build  --mode development",
    "build:stag": "nuxt build  --mode staging",
    "build:prod": "nuxt build  --mode production",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint-staged": "lint-staged",
    "format:prettier": "prettier --write ./src/**/*.{vue,ts,tsx,js,jsx,css,less,scss,json,md}",
    "lint:stylelint": "stylelint --fix \"./src/**/*.{vue,less,postcss,css,scss}\"",
    "lint:eslint": "npx eslint ./src --ext .vue,.ts,.tsx,.js,.jsx",
    "lint:eslint:fix": "npx eslint ./src --ext .vue,.ts,.tsx,.js,.jsx --fix",
    "lint:lint-staged": "lint-staged"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.4.6",
    "@unocss/nuxt": "^0.47.6",
    "@vueuse/core": "^9.9.0",
    "@vueuse/nuxt": "^9.9.0",
    "animate.css": "^4.1.1",
    "axios": "^1.2.2",
    "mitt": "^3.0.0",
    "nuxt": "3.0.0",
    "pinia": "^2.0.28",
    "svga": "^2.0.7",
    "unocss": "^0.47.6"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@varlet/ui": "^2.4.2",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.8.0",
    "husky": "^8.0.2",
    "husky-init": "^8.0.0",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.20",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.1",
    "sass": "^1.57.1",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "typescript": "^4.9.4",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-vconsole": "^1.3.1",
    "vue-eslint-parser": "^9.1.0"
  }
}